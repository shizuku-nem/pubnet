<body style="background-image: url(<%= asset_path "bg_img.png" %>); background-size: cover">
<div class=" col-sm-10 mx-5" style="position: absolute; top: 10%">

  <div class="col-sm-6" style="display: flex; align-items: center; justify-content: center;">
    <h4 style="color: white">プロフィール編集</h4>
  </div>
  <div style="align-content: center; align-self: center; align-items: center; color: white; font-weight: 800;">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="my-5 row" style="justify-content: center; color: white; align-items: center;" >
        <div class="col-sm-4 text-center">
          <% if current_user.avatar.attached? %>
        	  <%= image_tag(current_user.avatar, height: '100', width: '100', style: "border-radius: 50%; border: 6px solid #EEF149;", :alt => "avatar")%>
          <% end %>
         <div class="field" style="position: relative; height: 30px; width: 100px;left: 35%;top: 10px">
          	<label for="user_avatar" style="position: absolute;top: 0;right: 0;left: 0;bottom: 0;background-color: #666;color: #fff;border-radius: 5px;line-height: 30px;text-align: center;cursor: pointer">アバター</label>
          	<%= f.file_field :avatar, :title => "ファイルを選ぶ", style: "position: absoulte; opacity: 0; top: 0; left: 0; right: 0; bottom: 0" %><br>
          </div>
        </div>
        <div class="col-sm-6"></div>
      </div>
      <h3></h3>

      <div class="mb-3 row" style="color: white">
        <div class="col-sm-12">
          <i>(変更したくない場合は空のままにする)</i>
        </div>
        <label for="staticPassword" class="col-sm-2 col-form-label">パスワード</label>
        <div class="col-sm-4">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", style: "padding-left: 10px" %>
        </div>
      </div>
      <div class="mb-3 row" style="justify-content: center; color: white" >
        <label for="staticPassword_confirmation " class="col-sm-2 col-form-label">パスワードの確認</label>
        <div class="col-sm-4">
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control", style: "padding-left: 10px" %>
        </div>
        <div class="col-sm-6"></div>
      </div>
      <div class="mb-3 row" style="justify-content: center; color: white" >
        <div class="col-sm-12"> <i>(変更を確認するには、現在のパスワードを入力しなければならない)</i> </div>
        <label for="current_password " class="col-sm-2 col-form-label">現在のパスワード</label>
        <div class="col-sm-4">
          <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", class: "form-control", style: "padding-left: 10px" %>
        </div>
        <div class="col-sm-6"></div>
      </div> 
      
      <div class="mb-3 row" style="justify-content: center; color: white" >
        <label for="staticNickName" class="col-sm-2 col-form-label">ニックネーム *</label>
        <div class="col-sm-4">
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control", style: "padding-left: 10px" %>
           <% if resource.errors.any? && resource.errors[:nickname][0] %>
              <div class = "text-danger">ニックネームフィールドは空白のままにすることはできません, 3文字以上20文字以下。</div>
          <% end %>
        </div>
        <div class="col-sm-6"></div>
      </div>

      <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label"> メールアドレス *</label>
        <div class="col-sm-4">
          <%= f.email_field :email, utofocus: true, autocomplete: "email", class: "form-control", style: "padding-left: 10px" %>
         <% if resource.errors.any? && resource.errors[:email][0] %>
              <div class = "text-danger">ニックネームフィールドは空白のままにすることはできません。 正しいメール形式が必要です。</div>
          <% end %>
        </div>
        <div class="col-sm-6"></div>
      </div>

       <div class="mb-3 row" style="justify-content: center; color: white" >
        <label for="name" class="col-sm-2 col-form-label">名前 *</label>
        <div class="col-sm-4">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", style: "padding-left: 10px" %>
          <% if resource.errors.any? && resource.errors[:name][0] %>
              <div class = "text-danger">名前フィールドは空白のままにすることはできません。 </div>
          <% end %>
        </div>
        <div class="col-sm-6"></div>
      </div>

      <div class="mb-3 row" style="justify-content: center; color: white" >
        <label for="game_id" class="col-sm-2 col-form-label">ゲームID *</label>
        <div class="col-sm-4">
          <%= f.text_field :game_id, class: "form-control", style: "padding-left: 10px" %>
          <% if resource.errors.any? && resource.errors[:game_id][0] %>
              <div class = "text-danger">ゲームIDは空白のままにすることはできません, 3文字以上20文字以下。</div>
          <% end %>
        </div>
        <div class="col-sm-6"></div>
      </div>

  
      <div class="mb-3 row" style="justify-content: center; color: white" >
        <label for="gender" class="col-sm-2 col-form-label">性別</label>
        <div class="col-sm-4">
          <%= f.select :gender, User.genders.keys.to_a, class: "form-control", style: "" %>
           <% if resource.errors.any? && resource.errors[:gender][0] %>
              <div class = "text-danger">性別フィールドは空白のままにすることはできません。</div>
          <% end %>
        </div>
        <div class="col-sm-6"></div>
      </div>

  
      <div class="mb-3 row" style="justify-content: center; color: white" >
        <label for="staticAge" class="col-sm-2 col-form-label">年齢</label>
        <div class="col-sm-4">
          <%= f.text_field :age, class: "form-control", style: "padding-left: 10px" %>
          <% if resource.errors.any? && resource.errors[:age][0] %>
              <div class = "text-danger">年齢フィールドは空白のままにすることはできません, 0文字以上120文字以下。</div>
          <% end %>
        </div>
        <div class="col-sm-6"></div>
      </div>

      <br/>
      <div  class="mb-3 row" style="justify-content: center; color: white" >
        <div class="actions col-6" style="display: flex; align-items: center; justify-content: center;">
          <%= f.submit "保存", class: "btn btn-warning" %>
        </div>
        <div class="col-sm-6"></div>
    </div>
    <% end %>
  </div>

  <div class="actions col-6" style="display: flex; align-items: center; justify-content: center;">
    <%= link_to "キャンセル", :back %>
  </div>
</div>
</body>

